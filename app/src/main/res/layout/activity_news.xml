<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News">

    <TextView
        android:id="@+id/textSCMP"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="South China Morning Post"
        android:textStyle="bold"
        android:background="@color/lightBlue"/>

    <WebView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:id="@+id/webSCMP"
        android:layout_width="match_parent"
        android:layout_height="150dp">
    </WebView>

    <TextView
        android:id="@+id/textNow"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="210dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="Now Finance"
        android:textStyle="bold"
        android:background="@color/lightBlue"/>

    <WebView
        android:id="@+id/webNow"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </WebView>

    <TextView
        android:id="@+id/textSingTao"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="405dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="Sing Tao Finance"
        android:textStyle="bold"
        android:background="@color/lightBlue"/>

    <WebView
        android:id="@+id/webSingTao"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="435dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"></WebView>
</android.support.constraint.ConstraintLayout>