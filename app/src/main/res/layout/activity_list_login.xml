<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stocksim.ListLoginActivity">

    <TextView
        android:id="@+id/requestLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:text="Login for virtual trading function!"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonListLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@color/white"
        android:background="@color/lightBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestLogin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/hsi"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="HSI"/>
        <Button
            android:id="@+id/hkDetailStock"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="HK Detail Stock"
            android:textSize="10dp"/>
        <Button
            android:id="@+id/tips"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tips"
            android:textSize="10dp"/>
        <Button
            android:id="@+id/tradedList"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Traded List"
            android:textSize="10dp"
            android:background="@color/lightBlue"/>
        <Button
            android:id="@+id/profile"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textSize="10dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
