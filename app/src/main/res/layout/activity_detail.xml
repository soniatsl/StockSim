<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stocksim.MainActivity">

    <LinearLayout
        android:id="@+id/detaillayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_search_black_24dp"/>

        <EditText
            android:id="@+id/searchStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="24dp"
            android:textSize="16dp"
            android:hint="Input a stock ID (Format: xxxxx (5 digit))"/>


    </LinearLayout>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Search"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@color/lightBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detaillayout"
        android:layout_marginTop="20dp"/>



    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/hsi"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="HSI"/>
        <Button
            android:id="@+id/hkDetailStock"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="HK Detail Stock"
            android:textSize="10dp"
            android:background="@color/lightBlue"/>
        <Button
            android:id="@+id/tips"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tips"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/tradedList"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Traded List"
            android:textSize="10dp"/>
        <Button
            android:id="@+id/profile"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textSize="10dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
