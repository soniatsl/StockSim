<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stocksim.MainActivity">

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:background="@color/lightBlue"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/aUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/showEmail"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/ic_email_black_24dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/showEmail123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text=" "
                    android:layout_marginLeft="0dp" />

                <TextView
                    android:id="@+id/aEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp">

            <TextView
                android:id="@+id/showBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BALANCE"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/aBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/lightBlue"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/showUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/resetBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="425dp"
        android:background="@color/lightBlue"
        android:text="Reset the balance and stock owned"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <Button
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="550dp"
        android:background="@color/lightBlue"
        android:text="Change Password"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="670dp"
        android:background="@color/lightBlue"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/hsi"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="HSI"/>
        <Button
            android:id="@+id/hkDetailStock"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="HK Detail Stock"
            android:textSize="10dp"/>
        <Button
            android:id="@+id/tips"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tips"
            android:textSize="10dp"/>
        <Button
            android:id="@+id/tradedList"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Traded List"
            android:textSize="10dp"/>
        <Button
            android:id="@+id/profile"
            android:layout_width="64dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textSize="10dp"
            android:background="@color/lightBlue"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
