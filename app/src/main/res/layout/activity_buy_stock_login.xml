<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyStockLogin">

    <TextView
        android:id="@+id/pleaseLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Please login!"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/buyStockLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pleaseLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/buyStockClose"
        android:layout_marginRight="30dp"
        android:text="Login"
        android:textSize="20dp"
        android:background="@android:color/holo_green_light"/>

    <Button
        android:id="@+id/buyStockClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pleaseLogin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:text="Close"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/buyStockLogin"
        android:layout_marginLeft="30dp"
        android:background="@android:color/holo_red_light"/>

</android.support.constraint.ConstraintLayout>